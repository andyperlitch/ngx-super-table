{
  "name": "ngx-super-table",
  "description": "A table component for angular projects (angular versions >=2)",
  "homepage": "https://github.com/andyperlitch/ngx-super-table#readme",
  "bugs": {
    "url": "https://github.com/andyperlitch/ngx-super-table/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andyperlitch/ngx-super-table.git"
  },
  "license": "MIT",
  "author": "Andy Perlitch",
  "version": "0.0.1",
  "angular-cli": {},
  "scripts": {
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:dist": "./scripts/build.sh",
    "build:clean": "rimraf build dist waste deploy",
    "publish": "git push --follow-tags origin master && npm run build:dist && ./scripts/publish.sh",
    "test": "ng test --watch false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "gh-pages": "git checkout gh-pages && git merge master && npm run build && npm run typedoc && git add . && git commit -m 'chore: build demo and docs' && git push && git checkout master",
    "prerelease": "npm test",
    "release": "standard-version",
    "postrelease": "npm run build:clean && npm run gh-pages",
    "typedoc": "typedoc --options typedoc.json ngx-super-table.ts src/*.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.3.0",
    "@angular/compiler": "^4.3.0",
    "@angular/core": "^4.3.0",
    "@angular/forms": "^4.3.0",
    "@angular/http": "^4.3.0",
    "@angular/platform-browser": "^4.3.0",
    "@angular/platform-browser-dynamic": "^4.3.0",
    "@angular/router": "^4.3.0",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "lodash": "^4.17.0",
    "rxjs": "^5.4.2",
    "zone.js": "^0.8.13"
  },
  "devDependencies": {
    "@angular/cli": "^1.2.1",
    "@angular/compiler-cli": "^4.3.0",
    "@types/jasmine": "^2.5.53",
    "@types/lodash": "^4.14.69",
    "@types/node": "~6.0.60",
    "codelyzer": "^3.1.2",
    "commitizen": "~2.8.1",
    "conventional-changelog": "~1.1.0",
    "conventional-changelog-cli": "~1.2.0",
    "cz-conventional-changelog": "~1.2.0",
    "ghooks": "~1.3.2",
    "jasmine-core": "^2.6.4",
    "jasmine-spec-reporter": "^4.1.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.45.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "standard-version": "^4.2.0",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "validate-commit-msg": "~2.8.0"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
